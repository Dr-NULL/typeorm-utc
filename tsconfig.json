{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    "moduleResolution": "node",
    "strict": true,

    "baseUrl": "./src",
    "paths": {
      "@entities/*":  ["./entities/*"],
      "@tool/*":      ["./tool/*"]
    }
  }
}
